{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2018",
    "lib": ["es2018", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "pretty": true,
    "esModuleInterop": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "allowJs": false
  },
  "exclude": ["testing.d.ts", "dist", "template"]
}
